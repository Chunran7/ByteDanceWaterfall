<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="16dp">

    <!-- 店铺信息 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/shop_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/shop_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/apple_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/shop_name_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:singleLine="true"
            android:text="店铺名称"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@id/shop_icon"
            app:layout_constraintRight_toLeftOf="@id/shop_more_button"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/shop_more_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@null"
            android:src="@android:drawable/ic_menu_more"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 商品信息 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/product_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/shop_info_layout">

        <!-- 选择框 -->
        <ImageView
            android:id="@+id/select_checkbox"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/checkbox_off_background"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <!-- 商品图片 -->
        <ImageView
            android:id="@+id/product_image_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="12dp"
            android:background="@color/background_color"
            app:layout_constraintLeft_toRightOf="@id/select_checkbox"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <!-- 商品详细信息 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            app:layout_constraintLeft_toRightOf="@id/product_image_view"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/product_image_view">

            <!-- 商品名称 -->
            <TextView
                android:id="@+id/product_name_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"
                android:lines="2"
                android:text="商品名称"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- 商品描述 -->
            <TextView
                android:id="@+id/product_desc_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="商品描述"
                android:textColor="@color/gray_light"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/product_name_text_view" />

            <!-- 价格和数量 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/product_desc_text_view">

                <!-- 现价 -->
                <TextView
                    android:id="@+id/price_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥0.00"
                    android:textColor="@color/red"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- 原价 -->
                <TextView
                    android:id="@+id/original_price_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="¥0.00"
                    android:textColor="@color/gray_light"
                    android:textSize="12sp"
                    app:layout_constraintLeft_toRightOf="@id/price_text_view"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- 数量控制器 -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/quantity_controller"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:background="@color/background_color"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <Button
                        android:id="@+id/decrease_button"
                        android:layout_width="28dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:text="-"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/quantity_text_view"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:inputType="number"
                        android:imeOptions="actionDone"
                        app:layout_constraintLeft_toRightOf="@id/decrease_button"
                        app:layout_constraintTop_toTopOf="parent" />
                    <Button
                        android:id="@+id/increase_button"
                        android:layout_width="28dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:text="+"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:layout_constraintLeft_toRightOf="@id/quantity_text_view"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
