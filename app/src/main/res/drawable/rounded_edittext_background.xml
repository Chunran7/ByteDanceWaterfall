<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 阴影层 - 增强阴影效果 -->
    <item
        android:left="1dp"
        android:right="1dp"
        android:top="3dp"
        android:bottom="3dp">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="#40000000" />
        </shape>
    </item>
    <!-- 背景层 -->
    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="#f8f9f6" />
            <stroke
                android:width="1dp"
                android:color="#F0F0F0" />
        </shape>
    </item>
</layer-list>